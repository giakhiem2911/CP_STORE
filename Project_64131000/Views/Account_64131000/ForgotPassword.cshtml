@model Project_64131000.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<main aria-labelledby="title" class="container mt-5">
    <h2 id="title" class="text-center">@ViewBag.Title</h2>

    @using (Html.BeginForm("ForgotPassword", "Account_64131000", FormMethod.Post, new { role = "form", @class = "bg-light p-4 rounded shadow" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">Nhập địa chỉ email của bạn.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email của bạn" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="d-grid">
            <input type="submit" class="btn btn-primary" value="Gửi liên kết qua email" />
        </div>

        <p class="text-center mt-3">
            <a href="@Url.Action("Login", "Account_64131000")" class="link-secondary">Quay lại trang đăng nhập</a>
        </p>
    }
</main>
