@model Project_64131000.Models.Employees

@{
    ViewBag.Title = "Chi Tiết Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-success mb-4">Chi Tiết nhân viên</h2>

<div class="card shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-success text-white text-center">
        <h5>@Model.FullName</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <th style="width: 150px;">Mã nhân viên:</th>
                        <td>@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <th>Tên nhân viên:</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Vai trò:</th>
                        <td>@Model.Role</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Điện thoại:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Mật khẩu:</th>
                        <td>@Model.PasswordHash</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.EmployeeId }, new { @class = "btn btn-primary mx-2" })
        @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>

<style>
    h2 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
    }

    .card {
        border-radius: 10px;
    }

    .table th {
        font-weight: bold;
        color: #555;
    }

    .table td {
        color: #333;
    }
</style>
