@model IEnumerable<Project_64131000.Models.Products>

@{
    ViewBag.Title = ViewBag.CategoryName;
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>@ViewBag.CategoryName</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="@Url.Content("~/Images/" + product.ProductImage)" alt="@product.ProductName" style="height: 200px; object-fit: contain;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate fw-bold">@product.ProductName</h5>
                        <p class="card-text text-truncate">@product.ProductDescription</p>
                        <p class="card-text"><strong>Giá:</strong> @String.Format("{0:N0}", product.Price) VNĐ</p>
                    </div>
                    <div class="card-footer text-center">
                        @Html.ActionLink("Thêm vào giỏ","ProductDetails","HomePage_64131000",new { id = product.ProductId },new { @class = "btn btn-info btn-sm" })
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Không có sản phẩm nào trong danh mục này.</p>
}
