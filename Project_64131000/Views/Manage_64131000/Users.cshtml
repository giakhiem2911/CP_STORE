@model IEnumerable<Project_64131000.Models.Users>

@{
    ViewBag.Title = "Danh Sách Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Danh Sách Người Dùng</h2>
    <p class="text-right">
        @Html.ActionLink("Tạo Người Dùng Mới", "Create", null, new { @class = "btn btn-success" })
        @Html.ActionLink("Tìm kiếm người dùng", "Search", "Users_64131000", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Chức vụ</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center">Không có người dùng nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = user.UserId }, new { @class = "btn btn-warning btn-sm" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = user.UserId }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa người dùng này?');" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
