@model Project_64131000.Models.Users

@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    <h3>Bạn có chắc chắn muốn xóa người dùng này không?</h3>

    <div class="card">
        <div class="card-header">
            <h4>Thông tin người dùng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Tên đăng nhập
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt class="col-sm-2">
                    Mật khẩu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-2">
                    Vai trò
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role)
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-4">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
