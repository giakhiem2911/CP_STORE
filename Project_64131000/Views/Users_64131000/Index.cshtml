@model IEnumerable<Project_64131000.Models.Users>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Tạo người dùng mới", "Create", null, new { @class = "btn btn-success mb-3" })
        @Html.ActionLink("Tìm kiếm", "Search", null, new { @class = "btn btn-success mb-3" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Tên đăng nhập
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Vai trò
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning btn-sm" }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.UserId }, new { @class = "btn btn-info btn-sm" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Không có người dùng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
