@model Project_64131000.Models.Users

@{
    ViewBag.Title = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    <div class="card">
        <div class="card-header">
            <h4>Thông tin người dùng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    Tên đăng nhập
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    Vai trò
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Role)
                </dd>

                <dt class="col-sm-3">
                    Số điện thoại
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <p>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.UserId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </p>
    </div>
</div>
