@model List<Project_64131000.Models.Users>

@{
    ViewBag.Title = "Tìm kiếm người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Search", "Users_64131000", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">Tên đăng nhập:</label>
            <input type="text" class="form-control" name="username" placeholder="Nhập tên đăng nhập" />
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px">Tìm kiếm</button>
    }

    <h3 class="mt-4">DANH SÁCH NGƯỜI DÙNG</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Mã người dùng</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.UserId }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
