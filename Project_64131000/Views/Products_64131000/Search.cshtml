@model List<Project_64131000.Models.Products>

@{
    ViewBag.Title = "Tìm Kiếm Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0;
}

<div class="container mt-4">
    <h2>Tìm Kiếm Sản Phẩm</h2>

    <!-- Form tìm kiếm -->
    @using (Html.BeginForm())
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="maSP">Mã sản phẩm:</label>
                <input type="text" name="maSP" class="form-control" placeholder="Nhập mã sản phẩm" />
            </div>
            <div class="col-md-4">
                <label for="tenSP">Tên sản phẩm:</label>
                <input type="text" name="tenSP" class="form-control" placeholder="Nhập tên sản phẩm" />
            </div>
            <div class="col-md-4">
                <label for="hangSP">Hãng sản phẩm:</label>
                <input type="text" name="hangSP" class="form-control" placeholder="Nhập hãng sản phẩm" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="danhMucSP">Danh mục sản phẩm:</label>
                <input type="text" name="danhMucSP" class="form-control" placeholder="Nhập danh mục sản phẩm" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    }

    <h3 class="mt-4">DANH SÁCH SẢN PHẨM</h3>

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Đơn vị tính</th>
                <th>Ảnh</th>
                <th>Hãng</th>
                <th>Danh mục</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                    <td>@string.Format("{0:C0}", item.Price) VNĐ</td>
                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                    <td>
                        <img src="/Images/@item.ProductImage" alt="@item.ProductName" style="width: 50px; height: auto;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Brands.BrandName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Categories.CategoryName)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductId }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.ProductId }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
